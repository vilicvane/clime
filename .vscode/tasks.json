{
  "version": "0.1.0",
  "tasks": [
    {
      "taskName": "build-watch",
      "command": "yarn",
      "isBuildCommand": true,
      "isShellCommand": true,
      "args": ["tsc", "-w"],
      "showOutput": "silent",
      "isBackground": true,
      "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "lint",
      "command": "yarn",
      "isShellCommand": true,
      "args": ["lint", "--force"],
      "showOutput": "silent",
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": "absolute",
				"pattern": {
					"regexp": "^(?:([A-Z]+): )?(.*)\\[(\\d+),\\s(\\d+)\\]:\\s(.*)$",
          "severity": 1,
					"file": 2,
					"line": 3,
					"column": 4,
					"message": 5
				}
			}
    }
  ]
}
